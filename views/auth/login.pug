extends ../layout/index

block contenido
    div(class="py-3")
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        if errores
            div(class="max-w-md mx-auto my-10 bg-red-600")
                each error in errores
                    p(class=" text-white uppercase text-xs text-center placeholder p-2 mn-1 font-bold")=error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(class="space-y-5" method="POST" action="/auth/login" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email" ) Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( placeholder="Tu Email" type="email" name="email"
                        value=usuario ? usuario.email :""
                        )
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña" type="password" name="password"
                        value=usuario ? usuario.password :""
                        )


                    div.flex.items-center.justify-between
                        a(href="/auth/sign-up" class="text-gray-500 text-xs") ¿No tienes cuenta? Crea una.
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi Contraseña

                    input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer") 