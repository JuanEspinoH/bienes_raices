extends ../layout/index

block contenido
    div(class="py-3")
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(class="space-y-5")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña" type="password" name="password")

                    div.flex.items-center.justify-between
                        a(href="/auth/sign-up" class="text-gray-500 text-xs") ¿No tienes cuenta? Crea una cuenta
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi Contraseña
                    
                    input(type="submit" value="Iniciar sesión" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer") 