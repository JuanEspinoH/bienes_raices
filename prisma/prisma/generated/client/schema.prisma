generator client {
  provider = "prisma-client-js"
  output   = "./prisma/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  email      String    @unique
  nombre     String
  token      String?
  password   String
  confirmado Boolean?
  updatedAt  DateTime? @updatedAt
}

model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map(name: "sessions")
}
